<!DOCTYPE html>
<html>
  <head>
    <title>Nachos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="<%= type %>">
        <%= message.html_safe %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
